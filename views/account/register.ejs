<% if (title) { %>
    <h1><%= title %></h1>
<% } else { 
    res.redirect('/') 
} %>
        
<%- messages() %>
          
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <%  }) %>
    </ul>
<% } %>

    
<div id="register-container">
    <p>All fields are required.</p>
    <form id="registerForm" action="/account/register" method="post">
        <fieldset>
            <label for="fname" class="registration">First name:</label>
            <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">
            <label for="lname" class="registration">Last name:</label>
            <input type="text" id="lname" name="account_lastname" required value="<%= locals.account_lastname %>">
            <label for="remail" class="registration">Email:</label>
            <input type="email" id="remail" name="account_email" required value="<%= locals.account_email %>" placeholder="Enter a valid email address">
            <label for="rpword" class="registration">Password:</label>
            <input type="password" id="rpword" name="account_password" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <div><i>Passwords must be minimun of 12 characters and include 1 Capital letter,
                1 number and 1 special character.</i></div>
            <div id="pswdBtn">Show Password</div>
            <button type="submit" id="register">Register</button>
        </fieldset>
    </form>
</div>