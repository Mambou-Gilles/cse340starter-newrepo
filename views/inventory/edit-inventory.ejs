<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect("/")

    } %>
<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
        <%  }) %>
    </ul>
<% } %>

<form id="updateForm" action="/inv/update" method="post">
    <%- classificationSelectList %>
    <label for="make">Make</label>
    <input type="text" id="make" name="inv_make"
    <% if (locals.inv_make){ %> value="<%= locals.inv_make %>" 
        <% }%>>

    <label for="model">Model</label>
    <input type="text" id="model" name="inv_model"
    <% if (locals.inv_model){ %> value="<%= locals.inv_model %>" 
        <% }%>>

    <label for="description">Description</label>
    <textarea type="text" id="description" name="inv_description"
    <% if (locals.inv_description){ %><%= locals.inv_description %>" 
            <% }%>></textarea>

    <label id="image">image Path</label>
    <input type="text" id="image" name="inv_image" value="/images/vehicles/no-image.png" 
    <% if (locals.inv_image){ %> value="<%= locals.inv_image %>" 
        <% }%>>

    <label id="thumbnail">thumbnail Path</label>
    <input type="text" id="thumbnail" name="inv_thumbnail" value="/images/vehicles/no-image.png" 
    <% if (locals.inv_thumbnail){ %> value="<%= locals.inv_thumbnail %>" 
        <% }%>>


    <label id="price">Price</label>
    <input type="decimal" id="price" name="inv_price" pattern="^[0-9]*.?[0-9]+$" placeholder="decimal or integer"
    <% if (locals.inv_price){ %> value="<%= locals.inv_price %>" 
        <% }%>>


    <label id="year">Year</label>
    <input type="number" id="year" name="inv_year" placeholder="4-digit year" pattern="^\d{4}$" 
    <% if (locals.inv_year){ %> value="<%= locals.inv_year %>" 
        <% }%>>


    <label id="miles">Miles</label>
    <input type="number" id="miles" name="inv_miles" placeholder="digits only" pattern="^\d+$" 
    <% if (locals.inv_miles){ %> value="<%= locals.inv_miles %>" 
        <% }%>>


    <label id="color">Color</label>
    <input type="text" id="color" name="inv_color" 
    <% if (locals.inv_color){ %> value="<%= locals.inv_color %>" 
        <% }%>><br><br>


    <button type="submit" disabled>Update Vehicle</button>

    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
    </form>`


    <script src="/js/inv-update.js"></script>



